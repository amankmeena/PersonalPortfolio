extends base.pug

block scripts 
    script(src="/static/static.js") 

block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
        div.contactform
            h1 Contact Me for work/general Enquiries

            form(action="/contact", method="post", class="myform") 
                label(for="clientname", class="textlabel") Name:
                    input(type="text", name="name", class="myinput", id="clientname", placeholder="Enter your Name")
                label(for="clientemail", class="textlabel") Email address:
                    input(type="email", name="email", class="myinput", id="clientemail", placeholder="Enter your email id")
                    div#emailhelp We'll never share your email and phone with anyone else.
                label(for="clientphone", class="textlabel") Phone No.:
                    input(type="phone", name="phone", class="myinput", id="clientphone", placeholder="Enter your phone number")
                label(for="clientenquiry", class="textlabel") Enquiry:
                    input(type="text", name="enquiry", class="myinput", placeholder="Enter your Concern/Enquiry")
                label(for="clientwork", id="checklabel") I want you to work on a project with me:
                    input(type="checkbox", name="work", class="check")
                button(type="submit")
                    | Submit